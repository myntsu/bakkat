<style>
  h2 {
    display: flex;
    justify-content: center;

    position: relative;
    color: hsl(var(--main-dark), 90%);
  }

  #Testimonials > div {
    width: 100%;
    max-width: 1100px;
    margin-inline: auto;
  }

  #Affiliates {
    display: grid;
    grid-template-columns: repeat(
      auto-fill,
      minmax(min(calc(150px + 0.5rem), 100%), 1fr)
    );
    gap: 2rem;
    justify-items: center;
    padding-inline: 1rem;
  }

  .box {
    background-color: hsl(var(--secondary));
    border-radius: 50%;
    position: relative;
  }

  .box:is(:hover, :focus-visible) {
    background-color: hsl(var(--important));
    transition: background-color 200ms linear;
  }

  .box > a:is(:hover, :focus-visible) {
    opacity: 0.9;
    outline: 4px solid hsl(var(--important));
    outline-offset: 10px;
  }

  .box:is(:active) {
    scale: 0.97;
  }

  .box > * {
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: hsl(var(--white));
    margin: 0.25rem;
    border-radius: 50%;
    overflow: hidden;
  }

  .box img {
    width: 150px;
    height: 150px;
    object-fit: contain;
    border-radius: 50%;
  }

  .zoom-125 {
    zoom: 125%;
  }

  .zoom-150 {
    zoom: 150%;
  }
</style>
